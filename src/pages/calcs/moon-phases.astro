---
import type { Reference } from '../../types/types';

import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/calcs/Hero.astro';

import MoonPhaseComponent from '../../components/react/moon-phases/MoonPhase.tsx';
import References from '../../components/shared/References.astro';
import { calculators } from '../../utils/calculator-list';

const calculator = calculators.find((calc) => calc.id === 'moon-phases');

if (!calculator) {
    throw new Error('Calculator not found');
}

const references: Reference[] = [
    {
        title: 'NASA: Moon Phases',
        url: 'https://spaceplace.nasa.gov/moon-phases/'
    },
    {
        title: 'U.S. Naval Observatory: Phases of the Moon',
        url: 'https://aa.usno.navy.mil/data/MoonPhases'
    },
    {
        title: 'Astronomy Engine Documentation',
        url: 'https://github.com/cosinekitty/astronomy'
    }
];
---

<Layout title={calculator.name} description={calculator.description}>
    <div class="container">
        <Hero title={calculator.name} description={calculator.description} />
        <div style="min-height: 700px;" class="calculator">
            <MoonPhaseComponent client:load />
        </div>

        <!-- <References references={references} /> -->
    </div>
</Layout>

