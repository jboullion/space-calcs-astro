---
import type { Reference } from '../../types/types';

import Layout from '../../layouts/Layout.astro';
import Hero from '../../components/calcs/Hero.astro';

import FlyWheel from '../../components/vue/fly-wheel/FlyWheel.vue';
import References from '../../components/shared/References.astro';
import { calculators } from '../../utils/calculator-list';

const calculator = calculators.find((calc) => calc.id === 'fly-wheel');

if (!calculator) {
    throw new Error('Calculator not found');
}

const references: Reference[] = [
    {
        title: 'Flywheels - Kinetic Energy',
        url: 'https://www.engineeringtoolbox.com/flywheel-energy-d_945.html'
    },
    {
        title: 'Wiki: Flywheel energy storage',
        url: 'https://en.wikipedia.org/wiki/Flywheel_energy_storage'
    }
];
---

<Layout title={calculator.name} description={calculator.description}>
    <div class="container">
        <Hero title={calculator.name} description={calculator.description} />
        <div style="min-height: 700px;" class="calculator">
            <FlyWheel client:load />
        </div>

        <References references={references} />
    </div>
</Layout>

