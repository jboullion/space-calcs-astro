---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/calcs/Hero.astro";

import ONeillCylinder from "../../components/vue/oneill-cylinder/ONeillCylinder.vue";
import References from "../../components/shared/References.astro";
import type { Reference } from "../../types/types";
import { calculators } from "../../utils/calculator-list";

const calculator = calculators.find((calc) => calc.id === "oneill-cylinder");

if (!calculator) {
  throw new Error("Calculator not found");
}

const references: Reference[] = [
  {
    title: "The High Frontier: Human Colonies in Space",
    url: "https://en.wikipedia.org/wiki/The_High_Frontier:_Human_Colonies_in_Space",
  },
  {
    title: "Wiki: O'Neill Cylinder",
    url: "https://en.wikipedia.org/wiki/O%27Neill_cylinder",
  },
  {
    title: "Materials Data Book",
    url: "http://www-mdp.eng.cam.ac.uk/web/library/enginfo/cueddatabooks/materials.pdf",
  },
];
---

<Layout title={calculator.name} description={calculator.description}>
  <div class="container">
    <Hero title={calculator.name} description={calculator.description} />
    <ONeillCylinder client:load />
    <References references={references} />
  </div>
</Layout>

