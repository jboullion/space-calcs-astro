---
import Layout from "../../layouts/Layout.astro";
import Hero from "../../components/calcs/Hero.astro";

import HabitatRequirementsComponent from "../../components/vue/habitat-requirements/HabitatRequirements.vue";
import References from "../../components/shared/References.astro";
import type { Reference } from "../../types/types";
import SponsorCalc from "../../components/calcs/SponsorCalc.astro";
import SkeletonLoader from "../../components/shared/SkeletonLoader.astro";

const title = "Habitat Requirements";
const description =
  "Esimate the energy, mass, crew, and volume requirements for a habitat";

const references: Reference[] = [
  {
    title: "Data and Calculations by Sam Ross",
    url: "https://samross.space/",
  },
];
---

<Layout title={title} description={description}>
  <div class="container">
    <Hero title={title} description={description} />
    <div style="min-height: 600px;" class="calculator">
      <SkeletonLoader />
      <HabitatRequirementsComponent client:only />
    </div>
    <SponsorCalc>
      <a href="https://samross.space/" target="_blank" class="d-flex justify-content-center align-items-center mb-4">
        <img src="/images/sponsors/sam-ross.png" alt="Sam Ross" class="rounded-circle me-3" width="50"/>
        <h4>Sam Ross</h4>
      </a>

      <p>Sam has a masters degree in Aerospace and Aerothermal Engineering from the University of Cambridge.</p>
      <p>Sam was one of the principal authors of the <a href="https://nexusaurora.org/wp-content/uploads/2021/08/report.pdf" target="_blank">Nexus Aurora report on a Martian City State</a> presented at the 2020 Mars Convention.</p>
      <p>He also serves as the R&D Engineering Lead of the Mars Society UK group.</p>
    </SponsorCalc>
    <References references={references} />
  </div>
</Layout>

